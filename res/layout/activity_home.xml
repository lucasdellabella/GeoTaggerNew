<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"              
    tools:context=".HomeActivity" >
      
    <TextView
        android:id="@+id/home_homeLbl"       
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"        
        android:text="@string/welcome"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pageheader_textsize"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <LinearLayout        
        android:layout_below="@id/home_homeLbl"
        android:layout_alignParentLeft="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"                
        android:orientation="vertical" >
        
    	<Button
       		android:id="@+id/home_btnMyTags"
        	android:layout_width="match_parent"
        	android:layout_height="100dp"        	        	            	
        	android:background="@drawable/greenbutton"
        	android:text="@string/my_tags"
        	android:textColor="@android:color/white"
        	android:textStyle="bold" />
    	<Button
       		android:id="@+id/home_btnAddTag"
        	android:layout_width="match_parent"
        	android:layout_height="100dp"        	        	            	
        	android:background="@drawable/greenbutton"
        	android:text="@string/add_tag"
        	android:textColor="@android:color/white"
        	android:textStyle="bold" />		
		<Button
	    	android:id="@+id/home_btnAdventures"	    
        	android:layout_width="match_parent"
        	android:layout_height="100dp"        	
	    	android:background="@drawable/greenbutton"
	    	android:text="@string/adventures"
	    	android:textColor="@android:color/white"
	    	android:textStyle="bold" />		    	
	</LinearLayout>
	
	<LinearLayout	    
	    android:layout_below="@id/home_homeLbl"
	    android:layout_alignParentRight="true"
	    android:layout_width="150dp"
        android:layout_height="wrap_content"                
	    android:orientation="vertical" >
	    
		<Button
	    	android:id="@+id/home_btnFriends"	    
        	android:layout_width="match_parent"
        	android:layout_height="100dp"        	
	    	android:background="@drawable/greenbutton"
	    	android:text="@string/friends"
	    	android:textColor="@android:color/white"
	    	android:textStyle="bold" />
		<Button
        	android:id="@+id/home_btnMyProfile"                               
        	android:layout_width="match_parent"
        	android:layout_height="100dp"        
        	android:background="@drawable/greenbutton"        
        	android:text="@string/my_profile"
        	android:textColor="@android:color/white"        
        	android:textStyle="bold" />		
	</LinearLayout>
</RelativeLayout>