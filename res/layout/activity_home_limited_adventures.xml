<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"              
    tools:context=".HomeActivity" >
      
    <TextView
        android:id="@+id/home_homeLbl"       
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"        
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pageheader_textsize"
        android:textStyle="bold"
        android:typeface="sans" />
    
	<LinearLayout        
        android:layout_below="@id/home_homeLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"                
        android:orientation="vertical" >
        
		<Button
	    	android:id="@+id/home_btnAdventures"	    
        	android:layout_width="match_parent"
        	android:layout_height="140dp"        	
	    	android:background="@drawable/greenbutton"
	    	android:text="Adventures"
	    	android:textColor="@android:color/white"
        	android:textSize="@dimen/home_page_button_textsize"
	    	android:textStyle="bold" />		    	
		<Button
        	android:id="@+id/home_btnMyProfile"                               
        	android:layout_width="match_parent"
        	android:layout_height="140dp"        
        	android:background="@drawable/greenbutton"        
        	android:text="My Profile"
        	android:textColor="@android:color/white"        
        	android:textSize="@dimen/home_page_button_textsize"
        	android:textStyle="bold" />		
		<Button
        	android:id="@+id/home_btnSignOut"                               
        	android:layout_width="match_parent"
        	android:layout_height="70dp"        
        	android:background="@drawable/graybutton"        
        	android:text="Logout"
        	android:textColor="@android:color/white"        
        	android:textStyle="bold" />
		<Button
        	android:id="@+id/home_btnComments"                               
        	android:layout_width="match_parent"
        	android:layout_height="70dp"        
        	android:background="@drawable/graybuttondark"        
        	android:text="Geotagger Comments/Suggestions"
        	android:textColor="@color/light_gray"        
        	android:textStyle="bold" />
			</LinearLayout>
</RelativeLayout>